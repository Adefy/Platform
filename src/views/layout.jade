!!! 5
html(lang="en", data-ng-app="Adefy")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

    title Adefy

    meta(name="description", content="")
    meta(name="author", content="Spectrum IT")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    link(rel="shortcut icon", href="/img/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Roboto|Oleo+Script|")
    link(rel="stylesheet", href="/css/style.css")

  body
    #overlay
      #overlay-modal
    #status-bar
      #status-left.tricol
      #status-center.tricol
      #status-right.tricol
    nav#navbar.row-fluid
      h4.logo.tcenter Adefy
      ul#navbar-menu-action
      ul#navbar-submenu
      #navbar-tip

    #controlbar
      header
        span#company-name Spectrum IT

      ul#main-list
        a(href="dashboard")
          li.hoverable
            i.icon-dashboard
            span  Dashboard
        a(href="campaigns")
          li.hoverable.has-submenu
            i.icon-bar-chart
            span  Campaigns
          ul.submenu
            li
              i.icon-arrow-right
              span  Strawberease US
              .green.pull-right 74%
            li
              i.icon-arrow-right
              span  Strawberease UK
              .red.pull-right 34%
            li
              i.icon-arrow-right
              span  Clans.de AT
              .red.pull-right 42%
            li
              i.icon-arrow-right
              span  Clans.de RO
              .green.pull-right 89%
        a(href="ads")
          li.hoverable.has-submenu
            i.icon-rocket
            span  Ads
        a(href="adcreator")
          li.hoverable
            i.icon-magic
            span  Ad Creator
        a(href="settings")
          li.hoverable
            i.icon-gears
            span Settings
    #content(data-ng-view="")

    footer
      script(type="text/javascript", src="/js/vendor/zepto.js")
      script(type="text/javascript", src="/js/vendor/zepto-fancySlide.js")
      script(type="text/javascript", src="/js/vendor/angular.js")
      script(type="text/javascript", src="/socket.io/socket.io.js")

      script(type="text/javascript", src="/client/widgets/menubar.js")
      script(type="text/javascript", src="/client/widgets/tooltip.js")
      script(type="text/javascript", src="/client/widgets/overlay.js")

      script(type="text/javascript", src="/client/app.js")
      script(type="text/javascript", src="/client/controllers/dashboard.js")
      script(type="text/javascript", src="/client/controllers/campaigns.js")
      script(type="text/javascript", src="/client/controllers/ads.js")
      script(type="text/javascript", src="/client/controllers/adcreator.js")
      script(type="text/javascript", src="/client/controllers/settings.js")

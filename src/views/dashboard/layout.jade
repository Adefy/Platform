        #logo Adefy
      .menu.left.full
        a#home-tab(href="/home/publisher" alias="/home/advertiser" tab)
          i.fa.fa-fw.fa-home
          | Dashboard
        a#reports-tab(href="/reports/campaigns" tab)
          i.fa.fa-fw.fa-signal
          | Reports
        a#campaigns-tab(href="/campaigns" tab)
          i.fa.fa-fw.fa-bullhorn
          | Campaigns
        a#ads-tab(href="/ads" tab)
          i.fa.fa-fw.fa-sitemap
          | Ads
        a#apps-tab(href="/apps" tab)
          i.fa.fa-fw.fa-rocket
          | Apps

      .menu.right
        a(href="/funds" tab ng-cloak) Advertiser $ {{ me.adFunds | number:2 }}
        a(href="/funds" tab ng-cloak) Publisher $ {{ me.pubFunds | number:2 }}
        .da(dropdown, ng-click="toggleSelect()")
          i.fa.fa-fw.fa-cogs
          .dropdown(ng-show="isPopupVisible")
            if user.admin
              a(href="/admin/home")
                i.fa.fa-fw.fa-user
                | Admin
            a(href="/funds")
              i.fa.fa-fw.fa-dollar
              | Payments
            a(href="/settings")
              i.fa.fa-fw.fa-wrench
              | Settings
            a(ng-click="showTutorial()")
              i.fa.fa-fw.fa-question
              | Show tutorial
            a(ng-click="showIntercom()")
              i.fa.fa-fw.fa-comment
              | Support
            a(href="/logout" target="_self")
              i.fa.fa-fw.fa-sign-out
              | Sign out


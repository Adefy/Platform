html(lang="en", data-ng-app="AdefyDashboard")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

    title Adefy - Dashboard

    meta(name="description", content="")
    meta(name="author", content="Spectrum IT")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    link(rel="shortcut icon", href="/img/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Roboto|Oleo+Script|")
    link(rel="stylesheet", href="/css/style.css")

    base(href="/dashboard")

  body#page-dashboard
    nav.navbar.navbar-default.navbar-static-top
      .navbar-brand Dashboard

      .collapse.navbar-collapse.nb-links
        ul.nav.navbar-nav

          li(data-ng-class="{ active: tab == \"home\" }")
            a(href="/dashboard") Home

          li(data-ng-class="{ active: tab == \"ads\" }")
            a(href="/dashboard/ads") Ads

          li(data-ng-class="{ active: tab == \"campaigns\" }")
            a(href="/dashboard/campaigns") Campaigns

          li(data-ng-class="{ active: tab == \"account\" }")
            a(href="/dashboard/account") My Account

          li
            a(href="/logout", target="_self") Logout

    #content(data-ng-view="")

    footer
      script(type="text/javascript", src="/js/vendor/jquery.js")
      script(type="text/javascript", src="/js/vendor/angular.js")
      script(type="text/javascript", src="/js/vendor/bootstrap.min.js")
      script(type="text/javascript", src="/js/vendor/bootbox.min.js")
      script(type="text/javascript", src="/socket.io/socket.io.js")

      script(type="text/javascript", src="/client/dashboard/main.js")
      script(type="text/javascript", src="/client/dashboard/ctrl/home.js")
      script(type="text/javascript", src="/client/dashboard/ctrl/ads.js")
      script(type="text/javascript", src="/client/dashboard/ctrl/campaigns.js")
      script(type="text/javascript", src="/client/dashboard/ctrl/account.js")

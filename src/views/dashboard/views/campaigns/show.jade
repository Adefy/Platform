.titlebar.cf.full
  .name(ng-bind="campaign.name")
  .menu.full
    a.active(href="/campaigns/{{campaign.id}}")
      i.fa.fa-fw.fa-signal
      | Metrics
    a(href="/campaigns/{{campaign.id}}/edit")
      i.fa.fa-fw.fa-wrench
      | Settings


.contents.w920.center
  h1 Statistics
  .stats.campaign
    .stat: .wrap
      .amount.large ▲ {{ campaign.impressions | number }}
      .desc Impressions
    .stat: .wrap
      .amount.large ▲ {{ campaign.clicks | number }}
      .desc Clicks
    .stat: .wrap
      .amount.large {{ campaign.ctr | number }} %
      .desc CTR

.graphs
  .graph
    h3 Earnings
    canvas(linechart, options="options", data="chart", width="900", height="350")
    hr
    h3 Impressions
    canvas(linechart, options="options", data="chart", width="900", height="350")
include _menu

.contents.w920.center
  h1 Statistics
  .stats.campaign
    .stat: .wrap
      .amount.large ▲ {{ campaign.stats.impressions | number }}
      .desc Total Impressions
    .stat: .wrap
      .amount.large ▲ {{ campaign.stats.impressions24h | number }}
      .desc Impressions Today
    .stat: .wrap
      .amount.large ▲ {{ campaign.stats.clicks | number }}
      .desc Total Clicks
    .stat: .wrap
      .amount.large ▲ {{ campaign.stats.clicks24h | number }}
      .desc Clicks Today
    .stat: .wrap
      .amount.large {{ campaign.stats.ctr | number }} %
      .desc Lifetime CTR
    .stat: .wrap
      .amount.large {{ campaign.stats.ctr24h | number }} %
      .desc Today's CTR


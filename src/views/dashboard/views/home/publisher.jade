.stats.dashboard
  .stat: .wrap
    .amount.large $ {{ revenue24h | number:2 }}
    .desc Earned today
  .stat: .wrap
    .amount.large ▲ {{ impressions24h | number }}
    .desc Impressions today
  .stat: .wrap
    .amount.large ▲ {{ clicks24h | number }}
    .desc Clicks today
  .stat: .wrap
    .amount.large $ {{ totalRevenue | number:2 }}
    .desc Total revenue

.index.dashboard#home-publisher
  a.switch-view(href="/home/advertiser") Switch to advertiser view

  div.w50(ng-if="graph24hStats")
    h6.block.tcenter 24h Clicks &amp; Impressions
    div(analytics data="graph24hStats" width="350" height="150" type="line" legend="true" hover="true" hover="hoverFormatter")

  div.w50(ng-if="graph24hRevenue")
    h6.block.tcenter 24h Revenue
    div(analytics data="graph24hRevenue" width="350" height="150" type="line" legend="true" hover="true" hover="hoverFormatter")

  div.block(ng-if="graphLifetimeMetrics")
    h6.block.tcenter Lifetime Metrics
    div(analytics data="graphLifetimeMetrics" width="800" height="300" type="line" legend="true" hover="true" hover="hoverFormatter")

  h1 Top Apps
  table.info
    thead: tr
      th
      th Impressions
      th Clicks
      th CTR
      th Earnings
    tbody
      tr(ng-repeat="app in apps | orderBy:'earnings':true | limitTo:10")
        td {{ app.name }}
        td {{ app.stats.impressions | number }}
        td {{ app.stats.clicks | number }}
        td {{ app.stats.ctr | number:2 }}%
        td $ {{ app.stats.earnings | number:2 }}

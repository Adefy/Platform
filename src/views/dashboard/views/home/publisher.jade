.index.dashboard#home-publisher
  a.switch-view(href="/home/advertiser") Switch to advertiser view

  .w50(ng-if="graph24hStats")
    h6.block.tcenter 24h Clicks &amp; Impressions
    div(analytics data="graph24hStats" width="340" height="150" type="line" legend="true" hover="true" hover="hoverFormatter")

  .w50(ng-if="graph24hRevenue")
    h6.block.tcenter 24h Revenue
    div(analytics data="graph24hRevenue" width="340" height="150" type="line" legend="true" hover="true" hover="hoverFormatter")

  .block(ng-if="graphLifetimeMetrics")
    h6.block.tcenter Lifetime Metrics
    div(analytics data="graphLifetimeMetrics" width="820" height="300" type="line" legend="true" hover="true" hover="hoverFormatter")

  .section Top Apps
  table.info(ng-table="tableParams" id="TopAppsTable")
    tr(ng-repeat="app in apps" ng-show="!app.tutorial || (app.tutorial && me.tutorials.dashboard)")
      td(data-title="'App Name'" sortable="'name'")
        {{ app.name }}
      td(data-title="'Impressions'" sortable="'stats.impressions'")
        {{ app.stats.impressions | number }}
      td(data-title="'Clicks'" sortable="'stats.clicks'")
        {{ app.stats.clicks | number }}
      td(data-title="'CTR'" sortable="'stats.ctr'")
        {{ app.stats.ctr | number:2 }}
      td(data-title="'Earnings'" sortable="'stats.earnings'")
        {{ app.stats.earnings | number:2 }}

  div
    .section News
    ul.news
      li
        span.title We are live!
        span.date January 31th, 2014
        p
          | Adefy is now live and ready to serve you. Look around, get familiar with the platform and our
          a(href="https://developer.adefy.com" target="_blank") Developer Center.
          | If you need any assistance we will gladly help!

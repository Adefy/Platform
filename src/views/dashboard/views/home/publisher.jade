.stats.dashboard
  .stat: .wrap
    .amount.large $ {{ revenue24h | number:2 }}
    .desc Earned today
  .stat: .wrap
    .amount.large ▲ {{ impressions24h }}
    .desc Impressions today
  .stat: .wrap
    .amount.large ▲ {{ clicks24h }}
    .desc Clicks today
  .stat: .wrap
    .amount.large $ {{ totalRevenue | number:2 }}
    .desc Total revenue

.index.dashboard
  a.switch-view(href="/home/advertiser") Switch to advertiser view

  div
    div(graph data="graphData" width="840" height="300" type="line" legend="true" hover="true")

    h1 Top Apps
    table.info
      thead: tr
        th
        th Impressions
        th Clicks
        th CTR
        th Earnings
      tbody
        tr(ng-repeat="app in apps | orderBy:'earnings':true | limitTo:10")
          td {{ app.name }}
          td {{ app.stats.impressions | number }}
          td {{ app.stats.clicks | number }}
          td {{ app.stats.ctr | number:2 }}%
          td $ {{ app.stats.earnings | number:2 }}

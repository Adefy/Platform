a.new-item(href="/apps/new")
  i.fa.fa-plus
  | New app
.grid
  .item(ng-repeat="app in apps")
    img.icon(src="http://i1-news.softpedia-static.com/images/news2/Free-Angry-Birds-Release-Brings-Another-15-Levels-to-iPhone-iPod-touch-2.jpg")
    a.name(ng-bind="app.name" href="/apps/{{app.id}}")
    .metrics
      canvas(linechart, options="options", data="app.chart", width="340", height="200")
      .wrap: .text
        .amount.large $ {{ app.earnings | number:2 }}
        .desc Total Revenue
    .stats
      .tab
        .amount(data-ng-bind="app.requests")
        .desc Requests
      .tab
        .amount $ {{ app.earnings | number:2 }}
        .desc Made Today
include _menu

.contents.w920.center
  .stats.app
    .stat: .wrap
      .amount.large $ {{ app.stats.earnings24h | number:2 }}
      .desc 24h Earnings
    .stat: .wrap
      .amount.large ▲ {{ app.stats.impressions24h | number }}
      .desc 24h Impressions
    .stat: .wrap
      .amount.large ▲ {{ app.stats.clicks24h | number }}
      .desc 24h Clicks
    .stat: .wrap
      .amount.large {{ app.stats.requests | number }}
      .desc 24h Requests

.graphs#app-show
  .graph
    .w50
      h3 24h Stats

    .w50
      .block
        .w50.contents-right
          label(for="interval") Graph Interval:
        .w50.contents-left
          select(chosen name="interval" ng-model="graphInterval" ng-options="i.val as i.name for i in intervalOptions")

      .block
        .w50.contents-right
          label(for="sum") Sum:
        .w50.contents-left
          input(type="checkbox" name="sum" ng-model="graphSum")

    dib(ng-if="graphData != null")
      div(graph data="graphData" width="840" height="350" type="line" hover="hoverFormatter" legend="true")

.inner: form
  fieldset: dl.form.thin.center
    legend Profile
    dt: label Username
    dd: input(type="text" disabled placeholder="{{me.username}}")
    dt: label Email
    dd: input(type="email" disabled placeholder="{{me.email}}")

  fieldset: dl.form.thin.center
    legend Billing

    .billing.center
      h3 Address
      .field.w50.margin
        input(type="text" placeholder="First name")
      .field.w50
        input(type="text" placeholder="Last name")
      .field
        input(type="text" placeholder="Address")
      .field
        input(type="text" placeholder="State/Province")
      .field.w75.margin
        input(type="text" placeholder="City")
      .field.w25
        input(type="text" placeholder="Postal Code")
      .field
        select.chosen-select(data-placeholder="Select Country")
          option(selected="selected") Austria
          option France
          option UK
  fieldset: dl.form.thin.center
    dt
    dd: button.blue Save

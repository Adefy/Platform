doctype html
html(lang="en" ng-app="AdefyLogin")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")

    title Login

    meta(name="description" content="")
    meta(name="author" content="Spectrum IT")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    | <!--[if IE]>
    link(rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon")
    | <![endif]-->

    link(rel="icon" href="/img/favicon.png" type="image/png")

    link(rel="stylesheet" href="/css/reset.css")
    link(rel="stylesheet" href="/css/styles.min.css")
    link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Oleo+Script")

    style.
      .login {margin-top: 50px; text-align: center; }
      form {
        display: inline-block;
        text-align: center;
        background-color: #fff;
        border: 1px solid #ccc;
        padding: 30px;
        min-width: 250px;
        border-radius: 3px;
        box-shadow: 0 1px 2px rgba(0,0,0,.1);
      }
      input {width: 100%}
      input:first-of-type {
        border-radius: 3px 3px 0 0;
        margin-bottom: 0;
      }
      input:last-of-type {
        border-top: none;
        margin-top: 0;
        border-radius: 0 0 3px 3px;
      }
      header {
          height: 60px;
          line-height: 60px;
          text-align: center;

      }
      button {margin-top: 20px; padding: 10px 13px}
      #logo {float: none; font-size: 36px;line-height: 58px; margin-right: 0}

      .alert {
        margin: 70px auto 0;
        text-align: center;
        width: 250px;
        padding: 15px;
        color: #fff;
        text-shadow: 0 1px 2px rgba(0,0,0,.2);
        background: #e74c3c;
        border: 1px solid #c0392b
      }

  body(ng-controller="AdefyLoginController")
    .main
      header
        #logo Adefy
      div(ng-if="error != null" ng-bind="error" ng-class="{ alert: error != null }")
      .login
        form
          input(type="text" placeholder="Username" ng-model="username")
          input(type="password" placeholder="Password" ng-model="password")

          button.blue(ng-click="login()") Login
    footer
      script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.9/angular.min.js")
      script(src="/client/login/login.js")

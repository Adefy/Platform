!!! 5
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

    title Register

    meta(name="description", content="")
    meta(name="author", content="Spectrum IT")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    link(rel="shortcut icon", href="/img/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Roboto|Oleo+Script|")
    link(rel="stylesheet", href="/css/style.css")

  body#page-register

    .row
      .col-lg-offset-4.col-lg-4
        .well
          legend Register
          form.form-horizontal(method="post", action="/register")

            if locals.error
              .alert.alert-warning= locals.error

            .form-group
              label.col-lg-3(for="username") Username
              .col-lg-9
                input(name="username", type="text", placeholder="Enter username").form-control

            .form-group
              label.col-lg-3(for="fname") First name
              .col-lg-9
                input(name="fname", type="text", placeholder="John").form-control

            .form-group
              label.col-lg-3(for="lname") Last name
              .col-lg-9
                input(name="lname", type="text", placeholder="Doe").form-control

            .form-group
              label.col-lg-3(for="company") Company
              .col-lg-9
                input(name="company", type="text", placeholder="Enter company name").form-control

            .form-group
              label.col-lg-3(for="email") Email
              .col-lg-9
                input(name="email", type="email", placeholder="john.doe@gmail.com").form-control

            .form-group
              label.col-lg-3(for="password") Password
              .col-lg-9
                input(name="password", type="password", placeholder="Enter password").form-control

            .form-group
              label.col-lg-3(for="password_verify") Confirm
              .col-lg-9
                input(name="password_verify", type="password", placeholder="Repeat password").form-control

            .form-group
              label.col-lg-3(for="invitation") Invitation
              .col-lg-9
                input(name="invitation", type="text", placeholder="Enter invitation code").form-control

            .form-group
              .col-lg-offset-3
                .col-lg-3
                  button.btn.btn-primary Register
                .col-lg-3
                  a(href="/").btn.btn-default Cancel

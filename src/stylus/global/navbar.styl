#navbar
  background-color $blue
  height 41px
  position fixed
  top 0
  left 0
  width 100%
  color white

  .logo
    background-color $dblue
    width 280px
    padding 8px 0
    display inline-block
    float left


  #navbar-menu-action
    li.has_submenu
      border-bottom 1px solid $dblue

  #navbar-submenu
    width 200px
    position absolute
    top 42px
    left 280px
    background-color $blue
    z-index 100

    li
      display block
    li:hover
      background-color $dblue

    opacity 0


  #navbar-tip
    padding 8px 16px 8px 8px
    background-color $purple
    position absolute
    opacity 0
    white-space nowrap

  #navbar-tipbefore
    content ""
    position absolute
    left 8px
    top -6px
    border-left 6px solid transparent
    border-right 6px solid transparent
    border-bottom 6px solid $purple


  ul
    display inline-block

    li
      display inline-block
      padding 12px 16px 0 16px
      height 29px

    li:hover
      background-color $dblue
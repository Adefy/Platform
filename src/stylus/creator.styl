// Also defines button styles!
generateColorStyle(light, dark, borderCol, borderWidth)
  button#remind-me-later.button-round, button.button-round, &.color-option
    border borderWidth solid borderCol

    background light
    background -moz-linear-gradient(top, light 0%, dark 100%)
    background -webkit-gradient(linear, left top, left bottom, color-stop(0%, light), color-stop(100%, dark))
    background -webkit-linear-gradient(top, light 0%, dark 100%)
    background -o-linear-gradient(top, light 0%, dark 100%)
    background -ms-linear-gradient(top, light 0%, dark 100%)
    background linear-gradient(to bottom, light 0%, dark 100%)

    border-radius 32px

  button#remind-me-later.button-round, button.button-round
    padding 10px 48px

    &.example
      padding 10px 24px
      margin-bottom 8px

  button.button-square, button#remind-me-later.button-square
    border-radius 4px !important
    padding 10px 16px !important

    background light
    border-bottom 2px solid dark !important

  button.button-square, button.button-round
    color white
    text-align center
    font-size 14px
    font-family "Source Sans Pro"
    font-weight 300

  i
    color light


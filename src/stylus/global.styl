.tcenter
  text-align center

.tright
  text-align right

.fullw
  width 100%

.container
  width 960px margin 0 auto

.pull-right
  float right

.innter
  padding 0 8px

.notlinkhover
  cursor default

a
  text-decoration none
  color inherit

.buttonhover, .hoverablehover
  cursor hand cursor pointer

.inner
  padding 16px

.tricol
  width 33% display inline-block

h1, h2, h3, h4, h5, h6
  font-family "Oleo Script" serif

h1, .h1
  font-size 36px

h2, .h2
  font-size 32px

h3, .h3
  font-size 28px

h4, .h4
  font-size 25px

html, body
  background-color $lgray
  color $blue

*
  font-family "Roboto"

hr
  padding 0 !important
  margin 0
  border none
  border-top 1px solid $dgray
  border-bottom 1px solid $lgray

.input-group
  width 350px
  margin 4px 0
  display inline-block

  label, input, button
    display inline-block
    vertical-align top
    float left

  label
    width 100px
    padding-top 8px
    font-size 14px

  input
    width 242px
    margin 0
    padding 4px
    border 0
    background-color $dgray
    color white
    outline none

  input:focus
    border 1px solid $blue
    width 240px
    margin -1px

  button
    margin-left 100px
    background-color $blue
    color white
    padding 4px 8px
    font-size 14px
    border none

  button:hover
    cursor hand
    cursor pointer

.input-group:first-child
  margin-top 0

.input-group:last-child
  margin-bottom 0

#content
  float left

@import "global/functions"
@import "global/dialog-page"
@import "global/mainbar"
@import "global/basic-table"
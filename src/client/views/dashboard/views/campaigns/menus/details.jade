.stats.dashboard
  .stat: .wrap(ng-cloak)
    .amount.large ▲ {{ campaign.stats.impressions | number }}
    .desc Total Impressions
  .stat: .wrap
    .amount.large ▲ {{ campaign.stats.clicks | number }}
    .desc Total Clicks
  .stat: .wrap
    .amount.large {{ campaign.stats.ctr | number:2 }} %
    .desc Total CTR
  .stat: .wrap
    .amount.large {{ campaign.stats.spent | currency:$ }}
    .desc Total Spent

.titlebar.cf.full.campaign(ng-controller="AdefyCampaignMenuController" data-id="{{ campaign.id }}")
  .name(ng-bind="campaign.name")
  .menu.full
    a(ng-href="/campaigns/{{ campaign.id }}" tab partial="false")
      i.fa.fa-fw.fa-signal
      | Metrics
    a(ng-href="/campaigns/{{ campaign.id }}/edit" tab)
      i.fa.fa-fw.fa-wrench
      | Settings

  .toggle-wrap.right(ng-if="me.adFunds > 0 && !campaign.tutorial")
    toggle-switch(method="activeToggled()" model="campaign.active")

  .right
    .label.blue(ng-if="campaign.tutorial") Example
    .label.gray(ng-if="me.adFunds == 0") Upload Funds To Enable

doctype html
html(lang="en" ng-app="AdefyReset")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")

    title Reset password

    meta(name="description" content="")
    meta(name="author" content="Spectrum IT")
    meta(name="viewport" content="width=device-width, initial-scale=1")

    | <!--[if IE]>
    link(rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon")
    | <![endif]-->

    link(rel="icon" href="/img/favicon.png" type="image/png")

    link(rel="stylesheet" href="/css/styles.min.css")
    link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Oleo+Script|Source+Sans+Pro:300,400")

  body.account-page(ng-controller="AdefyResetController")
    .main
      header.absolute
        #logo Adefy

    .container
      #subtitle.block.tcenter Change password
      #teaser.block.tcenter Almost there!
      #description.block.tcenter Enter your new password

    .container.small
      form
        .info-box
          .left
            .inner
          .text Credentials
          .right
            .inner

        br

        label Password
        input(required type="password" placeholder="Password" ng-model="password" ng-keypress="enterSubmit($event)")

        label Password Confirmation
        input(required type="password" placeholder="Confirm password" ng-model="password_confirmation" ng-keypress="enterSubmit($event)")

    .container.small
      button#main-button(type="button" ng-click="reset()")
        div#main-icon
        | Change password

      div(ng-if="error != null" ng-class="{ error: error != null }" ng-bind="error")

    #bottom-action
      a(href="/register") Need to Register?

    footer
      script(src="/components/angular/angular.min.js")
      script(src="/js/controllers/login/reset.js")
